<% content_for(:title, t('.title')) %>
<div class="container mt-3">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <div class="border rounded-2 px-3 mt-3 follow-nav mb-1" style="min-width: 300px;">
        <p class="py-1 my-2 fw-bolder"><%= @user.name %> さんがフォローしているユーザ</p>
      </div>
      <% if @users.present? %>
        <%= render @users %>
      <% else %>
        <p class="text-secondary mt-3"><%= t('.no_result') %></p>
      <% end %>
    </div>
  </div>
</div>